<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui grid">
        <div class="twelve wide column">
            <i class="massive circular upload icon"></i>
            <h2>File Uploader</h2>
            <div class="ui indicating progress active">
                <div class="bar"></div>
                <div class="label">Uploading</div>
            </div>
            <!--Button that triggers the local file upload dialog box-->
            <button class="huge ui green button">
                Upload Local File
            </button>
        </div>
        <div class="twelve wide column">
            <!--Form for the user to specify a URL to a file they want to upload-->
            <form id="upload-url" class="ui huge form" action="/upload" method="POST">
                <div class="ui fluid action input">
                    <input id="uploadURL"type="text" placeholder="Enter URL here" name="uploadURL">
                    <button class="ui orange button">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!--input that handles the local file upload-->
<!--the accept argument restricts the file types the user can upload-->
<input type="file" id="upload-input" name="uploadFile" multiple="multiple"
       accept=".fasta, .fasta.gz, .fastq, .fastq.gz, .fa">

<!--Script that handles the logic for a user wanting to upload a local file-->
<script src="javascripts/upload.js"></script>


<% include ./partials/footer %>