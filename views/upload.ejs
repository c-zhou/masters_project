<% include ./partials/header %>


<div class="ui main text container">
    <div class="ui grid">
        <div class="twelve wide column">
            <i class="massive circular upload icon"></i>
            <h2>File Uploader</h2>
            <div class="ui indicating progress active">
                <div class="bar"></div>
                <div class="label">Uploading</div>
            </div>
            <button class="huge ui green button">
                <!--<i class="upload icon"></i>-->
                Upload Local File
            </button>
        </div>
        <div class="twelve wide column">
            <form class="ui huge form" action="/upload" method="POST">
                <div class="ui fluid action input">
                    <input type="text" placeholder="Enter URL here" name="uploads[url]">
                    <button class="ui orange button">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>


<input type="file" id="upload-input" name="uploads[file]" multiple="multiple"
       accept=".fasta, .fasta.gz, .fastq, .fastq.gz">

<script src="javascripts/upload.js"></script>


<% include ./partials/footer %>